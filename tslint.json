{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "indent": [
            true,
            "spaces"
        ],
        "trailing-comma": [
            false
        ],
        "no-console": [
            false
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-snake-case"
        ]
    },
    "rulesDirectory": [],
    "linterOptions": {
        "exclude": [
            "node_modules/**",
            "dist/**",
            "coverage/**"
        ]
    }
}